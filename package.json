{
  "title": "Shield Recipe Client",
  "name": "shield-recipe-client",
  "id": "shield-recipe-client@mozilla.org",
  "version": "0.1.0",
  "description": "Client to download and run recipes for SHIELD, Heartbeat, etc.",
  "main": "index.js",
  "author": "Mike Cooper <mcooper@mozilla.com>",
  "repository": "https://github.com/mozilla/normandy-addon",
  "scripts": {
    "test": "jpm test",
    "build": "jpm xpi"
  },
  "engines": {
    "firefox": ">=38.0a1"
  },
  "license": "MPL-2.0",
  "keywords": [
    "jetpack"
  ],
  "preferences": [
    {
      "name": "api_url",
      "title": "API URL",
      "description": "URL prefix to use for server requests",
      "type": "string",
      "value": "https://self-repair.mozilla.org/api/v1"
    }, {
      "name": "enabled",
      "title": "Enabled",
      "description": "Enable the recipe client",
      "type": "bool",
      "value": true
    }, {
      "name": "log_level",
      "title": "Log Level",
      "description": "Verbosity of logs",
      "type": "string",
      "value": "warning"
    }
  ],
  "devDependencies": {
    "babel-eslint": "6.1.2",
    "eslint": "1.10.3",
    "eslint-config-normandy": "1.0.0",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-mozilla": "0.0.3",
    "jpm": "1.1.3",
    "woodchipper": "0.9.1"
  },
  "dependencies": {
    "jexl": "1.1.3",
    "sha.js": "2.4.5"
  },
  "permissions": {
    "multiprocess": true
  }
}
